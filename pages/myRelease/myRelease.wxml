<!--pages/myRelease/myRelease.wxml-->
<view class='myReleaseWrap'>
  <view class='topBox' wx:if="{{ userType === 'hr' }}">
    <view class='item {{ tabType === "tiezi" ? "active" : "" }}' bindtap='chooseType' data-id="tiezi">帖子</view>
    <view class='item {{ tabType === "xiangmu" ? "active" : "" }}' bindtap='chooseType' data-id="xiangmu">
      {{ projectName }}
      <image class='arrowDown' wx:if="{{imgSrc !== ''}}" src='{{ imgSrc }}/arrowDown.png'></image>
    </view>
    <view class='item {{ tabType === "gangwei" ? "active" : "" }}' bindtap='chooseType' data-id="gangwei">
      {{ gangweiName }}
      <image class='arrowDown' wx:if="{{imgSrc !== ''}}" src='{{ imgSrc }}/arrowDown.png'></image>
    </view>
  </view>
  <!-- 发布的帖子 -->
  <view class='itemBox' wx:if="{{ tabType === 'tiezi' }}">
    <view class='topName'>
      <image class='touxiang' wx:if="{{imgSrc !== ''}}" src='{{ imgSrc }}/touxiang.png'></image>
      <view class='name'>啊实打实打</view>
      <view class='shenfen'>工程师</view>
      <view class='time'>刚刚发布</view>
    </view>
    <view class='title'>你认为程序员和搬砖的哪个挣的多？你认为程序员和搬砖的哪个挣的多？</view>
    <view class='bottomBox'>
      <view class='left'>
        <view class='content'>你认为程序员和搬砖的哪个挣的多？你认为程序员和搬砖的哪个挣的多？你认为程序员和搬砖的哪个挣的多？你认为程序员和搬砖的哪个挣的多？你认为程序员和搬砖的哪个挣的多？你认为程序员和搬砖的哪个挣的多？</view>
      </view>
      <view class='right'>
        <image class='rightImg' wx:if="{{imgSrc !== ''}}" src='{{ imgSrc }}/logo.png'></image>
      </view>
    </view>
    <view class='bottomBtn'>
      <view class='address'>滨江·海创园</view>
      <view class='iconBox'>
        <image class='discussIcon' wx:if="{{imgSrc !== ''}}" src='{{ imgSrc }}/shareIcon.png'></image>
        <text class='num'>20</text>
      </view>
      <view class='iconBox'>
        <image class='heartIcon' wx:if="{{imgSrc !== ''}}" src='{{ imgSrc }}/heartIcon.png'></image>
        <text class='num'>20</text>
      </view>
      <view class='iconBox'>
        <image class='discussIcon' wx:if="{{imgSrc !== ''}}" src='{{ imgSrc }}/discussIcon.png'></image>
        <text class='num'>20</text>
      </view>
    </view>
  </view>
  <!-- 发布的项目 -->
  <view wx:if="{{ tabType === 'xiangmu' }}">
    <view class='itemWrap' wx:for="{{ projectList }}" wx:key="">
      <view data-id="{{ item.id }}" bindtap='goProjectDetail'>
        <view class='first'>
          <view class='box'>招标</view>
          <view class='title'>{{ item.name }}</view>
          <view class='money'>{{ item.salaryStr }}</view>
        </view>
        <view class='second'>
          <text style='padding-left: 0'>{{ item.job_label1 }}</text>
          <text class='middleText'>{{ item.job_label2 }}</text>
          <text>{{ item.job_label3 }}</text>
        </view>
        <view class='content'>
          {{ item.instruction }}
        </view>
        <view class='line'></view>
      </view>
      <view class='btnWrap'>
        <view class='timeBtn'>工时核对</view>
      </view>
    </view>
    <view wx:if="{{ projectList.length == 0 }}" class='noDataWrap'>
      <image class='noData' wx:if="{{imgSrc !== ''}}" src='{{ imgSrc }}/noData.png'></image>
      <view class='textWord'>暂无信息</view>
    </view>
  </view>
  <!-- 发布的岗位 -->
  <view wx:if="{{ tabType === 'gangwei' }}" wx:key="">
    <view class='itemWrap itemWrapTwo' wx:for="{{ quartersList }}" data-id="{{ item.id }}" bindtap='goWordDetail'>
      <view class='first'>
        <view class='title'>{{ item.name }}</view>
        <view class='money'>{{ item.salaryStr }}</view>
      </view>
      <view class='second'>
        <text style='padding-left: 0'>{{ item.city_name }}</text>
        <text class='middleText'>{{ item.job_experience }}</text>
        <text>{{ item.education }}</text>
      </view>
      <view class='picBox'>
        <view class='left'>
          <image class='logoImg' src='{{ item.company_icon }}' ></image>
        </view>
        <view class='right'>
          <view class='logoName'>{{ item.company_name }}</view>
          <view class='logoType'>{{ item.line_name }}</view>
        </view>
      </view>
    </view>
    <view wx:if="{{ quartersList.length == 0 }}" class='noDataWrap'>
      <image class='noData' wx:if="{{imgSrc !== ''}}" src='{{ imgSrc }}/noData.png'></image>
      <view class='textWord'>暂无信息</view>
    </view>
  </view>
  <!-- 项目状态选择 -->
  <view class='typeAllMask' wx:if="{{ projectMask }}">
    <view class='maskRow {{ projectType == "" ? "active" : "" }}' bindtap='chooseProject' data-id="" data-ida="全部项目">全部项目</view>
    <view class='maskRow {{ projectType == 2 ? "active" : "" }}' bindtap='chooseProject' data-id="2" data-ida="待招聘">待招聘</view>
    <view class='maskRow {{ projectType == 1 ? "active" : "" }}' bindtap='chooseProject' data-id="1" data-ida="进行中">进行中</view>
    <view class='maskRow {{ projectType == 3 ? "active" : "" }}' bindtap='chooseProject' data-id="3" data-ida="已完成">已完成</view>
    <!-- <view class='maskRow {{ typeAll === "岗位" ? "active" : "" }}' bindtap='chooseAll' data-id="岗位">已拒绝</view> -->
  </view>
  <!-- 岗位状态选择 -->
  <view class='typeAllMask' wx:if="{{ gangweiMask }}">
    <view class='maskRow {{ gangweiType == "" ? "active" : "" }}' bindtap='chooseGangwei' data-id="" data-ida="全部岗位">全部岗位</view>
    <view class='maskRow {{ gangweiType == 1 ? "active" : "" }}' bindtap='chooseGangwei' data-id="1" data-ida="招聘中">招聘中</view>
    <view class='maskRow {{ gangweiType == 2 ? "active" : "" }}' bindtap='chooseGangwei' data-id="2" data-ida="暂停中">进行中</view>
    <view class='maskRow {{ gangweiType == 3 ? "active" : "" }}' bindtap='chooseGangwei' data-id="3" data-ida="已结束">已结束</view>
  </view>
</view>
